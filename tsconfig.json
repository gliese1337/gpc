{
  "compilerOptions": {
    "target": "ES6",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
  },
  "exclude": [
    "node_modules",
    "dist",
    ".npm"
  ]
}